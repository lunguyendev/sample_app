<header class ="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="row">
      <%= link_to t("layouts._header.content_link"), root_path, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts._header.home"), root_path %></li>
        <li><%= link_to t("layouts._header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts._header.user"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", {class: "dropdown-toggle", data: {toggle: "dropdown"}} do %>
              <%= t "layouts._header.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts._header.profile"), current_user %></li>
              <li><%= link_to t("layouts._header.setting"), edit_user_path(current_user) %></li>

              <li class="divider"></li>
              <li> <%= link_to t("layouts._header.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts._header.login"), login_path %></li>
        <% end %>
        </ul>
      </nav>
    </div>
  </div>
  <div class="translate">
    <%= link_to t("layouts._header.vi"), locale: :vi %>
    <%= link_to t("layouts._header.en"), locale: :en %>
  </div>
</header>
