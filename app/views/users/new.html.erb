<% provide :title, t("sign_up.title") %>
<% provide :title_base, t("sign_up.base_title") %>
<h1><%=t("sign_up.title")%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t("sign_up.form.name") %>
      <%= f.text_field :name %>
      <%= f.label :email, t("sign_up.form.email") %>
      <%= f.email_field :email %>
      <%= f.label :password, t("sign_up.form.password") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t("sign_up.form.confirmation") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t("sign_up.form.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
