<% provide :title, t("forget_pass.title") %>
<% provide :title_base, t("forget_pass.base_title") %>
<h1><%= t "forget_pass.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label :email, t("forget_pass.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.submit t("forget_pass.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
